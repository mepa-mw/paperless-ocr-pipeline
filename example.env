# Database configurations
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="paperless_ocr_db"
DB_USER="postgres"
DB_PASS=""

DB_PAPERLESS_HOST="localhost"
DB_PAPERLESS_PORT=5432
DB_PAPERLESS_NAME="paperless_db"
DB_PAPERLESS_USER="postgres"
DB_PAPERLESS_PASS=""

# Directories
MEDIA_DIR="/opt/paperless/media/documents/originals"
BACKUP_DIR="/opt/paperless-ocr-pipeline/storage/backups"
LOGS_DIR="/opt/paperless-ocr-pipeline/storage/logs"

# Watcher configurations
WATCHER_CHECK_INTERVAL=300

# Worker Configurations
WORKER_NAME="paperless-ocr-worker"
WORKER_BROKER="redis://localhost:6379/2"
WORKER_BACKEND="redis://localhost:6379/2"

# S3 minio configurations
MINIO_ENDPOINT="127.0.0.1:9003"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="paperless-backups"

# S3 aws configurations
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false